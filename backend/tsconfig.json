{
  "compilerOptions": {
    "target": "ES6",                           
    "module": "commonjs",                      
    "strict": true,                           
    "esModuleInterop": true,                   
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
"typeRoots": ["./node_modules/@types", "./src/types"],
    "baseUrl": "./src",                       
    "paths": {
      "*": ["node_modules/*"]                  
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]            
}
